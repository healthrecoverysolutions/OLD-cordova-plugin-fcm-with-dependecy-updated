{
  "version": "6.4.1",
  "name": "cordova-plugin-fcm-with-dependecy-updated",
  "cordova_name": "Cordova FCM Push Plugin",
  "description": "Google Firebase Cloud Messaging Cordova Push Plugin fork with dependecy updated",
  "license": "MIT",
  "main": "www/FCMPlugin.js",
  "typings": "typings/index.d.ts",
  "repo": "https://github.com/andrehtissot/cordova-plugin-fcm-with-dependecy-updated",
  "issue": "https://github.com/andrehtissot/cordova-plugin-fcm-with-dependecy-updated/issues",
  "author": "AndrÃ© Augusto Tissot",
  "scripts": {
    "build": "npm run build:dts;npm run build:js;npm run build:ionic",
    "build:js": "tsc -p .; rollup -c rollup.config.js; rm -rf ./www/tmp; npm run build:js:fix-export",
    "build:js:fix-export": "sed 's/exports\\.default = /module\\.exports = /' www/FCMPlugin.js > www/FCMPlugin.tmp.js; mv www/FCMPlugin.tmp.js www/FCMPlugin.js",
    "build:dts": "cp ./src/www/*.d.ts ./typings; tsc -p . --declaration true --declarationDir ./typings --removeComments false",
    "build:ionic": "cd ./src/ionic;npm run build",
    "prettier": "find ./src/www -name '*.js' -or -name '*.ts' -or -name '*.tsx' -or -name '*.scss' | xargs prettier --write",
    "tslint": "npx tslint -p . --fix",
    "tsc": "npx tsc -p . --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrehtissot/cordova-plugin-fcm-with-dependecy-updated"
  },
  "keywords": [
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios",
    "notifications",
    "push",
    "firebase",
    "fcm",
    "ios",
    "android",
    "cordova"
  ],
  "platforms": [
    "android",
    "ios"
  ],
  "englishdoc": "",
  "devDependencies": {
    "@types/cordova": "0.0.34",
    "prettier": "^2.0.5",
    "rollup": "^2.12.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "tslint": "^6.1.2",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.9.3"
  }
}
